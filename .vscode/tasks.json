{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "PlatformIO Build Verbose",
      "type": "shell",
      "command": "pio",
      "args": [
        "run",
        "-v"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "type": "PlatformIO",
      "task": "Verbose Build",
      "problemMatcher": [
        "$platformio"
      ],
      "label": "PlatformIO: Verbose Build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}